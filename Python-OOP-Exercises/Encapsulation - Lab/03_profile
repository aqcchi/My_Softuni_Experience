class Profile:

    def __init__(self, username: str, password: str):
        self.username = username
        self.password = password
        
    @property
    def username(self):
        return self.__username
    
    @username.setter
    def username(self, value):
        if 5 < len(value) <= 15:
            self.__username = value
        else:
            raise ValueError("The username must be between 5 and 15 characters.")
        
    @property
    def password(self):
        return 
    
    @password.setter
    def password(self, value):
        is_long_enough = len(value) >= 8
        is_upper_case = any([char for char in value if char.isupper()])
        is_digit = any([char for char in value if char.isdigit()])

        if is_long_enough and is_upper_case and is_digit:
            self.__password = value
        else:
            raise ValueError("The password must be 8 or more characters with at least 1 digit and 1 uppercase letter.")

    def __str__(self):
        return f'You have a profile with username: "{self.username}" and password: {"*" * len(self.__password)}'
